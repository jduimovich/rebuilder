SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
kubectl apply -f $SCRIPTDIR/../deploy.yaml
while true 
do
    RT=$(kubectl get routes rebuilder -o jsonpath={.spec.host} 2> /dev/null)  
    if [ -z $RT ]; then
        echo "rebuilder route not ready" 
    else  
        echo "$RT is  ready" 
        echo "curl -k https://$RT/authorize?id=$(oc whoami --show-token)" 
        curl -k https://$RT/authorize?id=$(oc whoami --show-token)
        exit
    fi
done